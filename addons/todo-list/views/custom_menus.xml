<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Action to view the to-do list -->
    <record id="action_to_do_list_all" model="ir.actions.act_window">
        <field name="name">To Do List</field>
        <field name="res_model">to.do.list</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

    <record id="action_to_do_list_uncomplete" model="ir.actions.act_window">
        <field name="name">To Do List</field>
        <field name="res_model">to.do.list</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

    <record id="action_to_do_list_complete" model="ir.actions.act_window">
        <field name="name">To Do List</field>
        <field name="res_model">to.do.list</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>
    
    <!-- Menu item -->
    <menuitem id="menu_todo_list" name="Todo List" sequence="10"/>
    <menuitem id="menu_todo_list_all" name="All" parent="menu_todo_list" action="action_to_do_list_all"/>
    <menuitem id="menu_todo_list_uncomplete" name="Uncomplete" parent="menu_todo_list" action="action_to_do_list_uncomplete"/>
    <menuitem id="menu_todo_list_complete" name="Complete" parent="menu_todo_list" action="action_to_do_list_complete"/>

</odoo>